<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <!-- Customize header  -->
        <template id="tunear_header" inherit_id="website.layout" name="Mica Header">

            <!-- Assign an id  -->
            <xpath expr="//div[@id='wrapwrap']/header" position="attributes">
                <attribute name="id">mi_melon</attribute>
            </xpath>

            <!-- Add an element after the top menu  -->
            <xpath expr="//div[@id='wrapwrap']/header/div" position="after">
                <div class="container">
                    <div class="alert alert-info mt16" role="alert">
                        <strong>El trapoo</strong> comete el pan cometelocometelocometelo!
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</openerp>
